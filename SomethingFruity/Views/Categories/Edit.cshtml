@model SomethingFruity.Models.Category

@{
    ViewData["Title"] = "Update Category";
    Layout = null;
}

<h2>Update</h2>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryCode" class="control-label"></label>
                <input asp-for="CategoryCode" class="form-control" required />
                <span asp-validation-for="CategoryCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexCheckDefault">
                <label asp-for="IsActive" class="control-label"></label>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
